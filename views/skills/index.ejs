<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Express Skills</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h1>Skills as of <%= time %></h1>
  <% if(error) { %>
    <h2><%= error %></h2>
  <% } %>
  <ul>
    <% skills.forEach(skills => { %>
      <li>
        <form 
          action="/skills/<%= skills._id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button type="submit">X</button>
        </form>
        <a href="/skills/<%= skills._id %>"><%= skills.text %></a>
         -
        <%= skills.done ? "done" : "not done" %>  
      </li>
    <% }) %>
  </ul>
  <a href="/skills/new">Add To-Do</a>
</body>
</html>